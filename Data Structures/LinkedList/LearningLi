// // making a node

class Node {
    constructor(data,next=null)
    {
        this.data=data;
        this.next=next;
    }
}

// const n1=new Node(100);
// console.log(n1)

//making a LinkedList
class LinkedList {
    constructor(){
        this.head=null;
        this.size=0;
    }

    //insert the node
    insertFirst(data){
        this.head=new Node(data,this.head)
    }

    //print the list data
    printListData(){
        let current=this.head;

        while(current){
            console.log(current.data);
            current=current.next;
        }
    }


    //inserting last node
    insertLast(data){
        let node=new Node(data);
        let current;

        //if empty,make head
        if(!this.head)
        {
            this.head=head;
        }
        else{
            current=this.head;
            while(current.next)
            {
                current=current.next;
            }
            current.next=node;
        }
    }
}

const ll=new LinkedList();
ll.insertFirst(100);
ll.insertFirst(200);

ll.printListData();

